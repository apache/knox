    <service name="LOGSEARCH">
        <url-pattern>{SCHEME}://{HOST}:{PORT}</url-pattern>
        <properties>
            <property name="HOST">
                <component>LOGSEARCH_SERVER</component>
                <hostname/>
            </property>
            <property name="SCHEME">
                <component>LOGSEARCH_SERVER</component>
                <config-property>logsearch.protocol</config-property>
            </property>
            <property name="HTTP_PORT">
                <component>LOGSEARCH_SERVER</component>
