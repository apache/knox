                <config-property>logsearch.https.port</config-property>
            </property>
            <property name="PORT">
                <config-property>
                    <if property="SCHEME" value="https">
                        <then>HTTPS_PORT</then>
                        <else>HTTP_PORT</else>
                    </if>
                </config-property>
            </property>
        </properties>
    </service>

</service-discovery-url-mappings>
